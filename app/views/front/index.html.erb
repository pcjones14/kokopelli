<div class="main">
  <div class="article">

    <%= "<p class=\"notice\">#{flash[:notice]}</p>".html_safe if flash[:notice] %>
    <%= "<p class=\"error\">#{flash[:error]}</p>".html_safe if flash[:error] %>

    <h1>Learning Center</h1>

    <% @articles.each do |article| %>
      <% if article.visible %>
        <h2 style="line-height:100%;"><%= link_to(article.title, front_show_path(id: article.id)) %></h2>
        <h5 style="line-height:100%;">by <%= article.author %> | <%= "#{article.updated_at}"[0...-12] %></h5>
        <h5 style="line-height:100%;">category: <%= link_to(parse_keywords(article.category), front_search_path(category: article.category)) %></h5>
        <%= "#{article.body}"[0..500].html_safe + " [. . .] &larr; ".html_safe + link_to("Read more</p>".html_safe, front_show_path(id: article.id)) %>
        <hr />
      <% end %>
    <% end %>

    <div class="centered pagination"><%= paginate @articles %></div>

  </div>
</div>
