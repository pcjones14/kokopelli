<%= "<p class=\"alert alert-success\">#{flash[:notice]}</p>".html_safe if flash[:notice] %>
<%= "<p class=\"alert alert-error\">#{flash[:error]}</p>".html_safe if flash[:error] %>

<%= form_for(@user, method: "put") do |f| %>
	<div class="aform">
		<p>Name:<br/>
			<%= f.text_field :name %></p>
		<p>Email:<br/>
			<%= f.text_field :email %></p>
		<p>Password:<br/>
			<%= link_to("edit password", users_edit_password_path(id: @user.id)) %></p>
		<p>Bio:</br>
			<%= f.text_area :bio, rows:10, cols: 80 %></p>
		<p>Avatar (100 x 100 px)<br/>
			<% if @user.avatar != nil %>
				<%= image_tag(@user.avatar) %>
			<% end %>
			<%= f.file_field :avatar %></p>
		<p><%= submit_tag %></p>
	</div>
<% end %>